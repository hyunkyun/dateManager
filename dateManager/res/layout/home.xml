<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/dateCounterTitle"
        style="@style/nameStyle"
        android:text="Day Counter" />
    
    <FrameLayout
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/no_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dayCounterNoday"
            android:textSize="20dip"
            android:gravity="center"
            android:padding="20dip"
            android:visibility="invisible"
            android:background="@drawable/text_button"
            />
        <LinearLayout
            android:id="@+id/hasday_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible"
            android:padding="20dip"
            android:background="@drawable/text_button"
            >
            <TextView
                android:id="@+id/hasday_memo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="no memo"
                android:textSize="20dip"
                android:layout_weight="3"
                />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hasday_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="x일째"
                    android:textColor="@color/dark"
                    android:textSize="15dip" />
                <TextView
                    android:id="@+id/hasday_startdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="yyyy.mm.dd"
                    android:textColor="@color/dark"
                    android:textSize="10dip" />
            </LinearLayout>
            
        </LinearLayout>

	</FrameLayout>

	<TextView
        android:id="@+id/dateCounter_Special"
        style="@style/nameStyle"
        android:text="Upcomming Special Day"/>
	
    <LinearLayout
        android:id="@+id/test_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>
    
</LinearLayout>